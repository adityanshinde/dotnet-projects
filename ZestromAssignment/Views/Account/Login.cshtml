@model ZestromAssignment.ViewModels.LoginViewModel
@{
    Layout = null; // standalone for learning
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; margin: 2rem; }
        label { display:block; margin-top:0.5rem; }
        input { padding:0.4rem; width: 250px; }
        .error { color: red; }
    </style>
</head>
<body>
    <h2>Login</h2>
    <form asp-action="Login" method="post">
        <div>
            <label asp-for="Username"></label>
            <input asp-for="Username" />
            <span class="error" asp-validation-for="Username"></span>
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span class="error" asp-validation-for="Password"></span>
        </div>
        <div style="margin-top:1rem;">
            <button type="submit">Login</button>
        </div>
        @if (Model?.ErrorMessage != null)
        {
            <div class="error" style="margin-top:1rem;">@Model.ErrorMessage</div>
        }
    </form>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
